extends ../layouts/layout

block head
  - var pageTitle = 'Избранное'

block content
  +header
  .page
    .section_gray-1
      .container
        nav(aria-label="breadcrumb").breadcrumb__wrapper
          ol.breadcrumb
            li.breadcrumb-item: a(href="#") Главная
            li(aria-current="page").breadcrumb-item.active Избранное

    section.section__select.container
      .row
        .col-sm-12
          h1 Избранные товары
      .row
        .col-12
          +select-panel.flex


      .row.no-gutters.select__product-card
        .col-xl-3.col-lg-4.col-md-6.col-sm-12
          +product-card('oldprice', 'catalog2', 'Настенный кондиционер Kentatsu KSGB35HFAN1 Настенный кондиционер Kentatsu KSGB35HFAN1', 'Кондиционер и очень очень длинное название', 'select')
            .label__container.flex
              +label('green') акция
        .col-xl-3.col-lg-4.col-md-6.col-sm-12
          +product-card('oldprice', 'catalog-2', false, false, 'select')
            .label__container.flex
              +label('blue') скидка
        .col-xl-3.col-lg-4.col-md-6.col-sm-12
          +product-card('oldprice', 'catalog-2', false, false, 'select')
            .label__container.flex
              +label('green') акция
              +label('blue') скидка
              +label('orange') акция + скидка
        .col-xl-3.col-lg-4.col-md-6.col-sm-12
          +product-card('', 'catalog-1', false, false, 'select')
        - for (var x = 1; x < 2; x++)
          .col-xl-3.col-lg-4.col-md-6.col-sm-12
            +product-card('', 'catalog', false, false, 'select')





    .section__consult
      .section__consult_bg
      .container
        .consult__wrapper
          +consult.consult_grey


  +footer
  +modal-callMe#callMe
