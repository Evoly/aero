      +checkbox('name') Охлаждение
        +num(2)
      +checkbox('name') Охлаждение / обогрев
        +num(72)
    .catalog-form__button
      a(href='#').btn.btn-primary показать
      a(href='#').btn.btn-grey сбросить
    .mypopover
      span.mypopover__item Выбрано: #[span.num 74]
      a(href="#").mypopover__item Показать


mixin checkbox(name, value, checked, required, className)
  label(data-toggle="popover").checkbox&attributes(attributes)
    - var check = checked || '';
    - var name1 = name || '';
    input.input(name=name1, value=value, checked=!!check, type= "checkbox", required=required, class=className)
    span.checkmark.checkmark_box
    span.checkbox__content
      block

mixin num(value)
  -var val = value;
    span  (#[span=val])
