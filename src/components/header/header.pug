mixin header()
  header.header&attributes(attributes)
    +icon-block()
    .container
      .row.header__row.no-gutters
        .col-xl-auto.col-lg-6.col-sm-12
            a(href='index.html').header__logo
              span.header__logo_red aero
              span.header__logo_blue control
              p.header__logo-text климатическое&nbsp;&nbsp;оборудование
        .col-xl-auto.col-lg-6.col-sm-12
          .header__time.flex
            span.icon-inline.clock
            span Пн — Пт: 10:00 — 18:00
          .header__select
            +icon-link('heart', 'heart_red')
              span Избранное
                span &#32;(#[span 23])
            +icon-link('libra', 'libra_red')
              span Сравнение
                span &#32;(#[span 12])

        .col-xl-auto.col-lg-6.col-sm-12
          form(action="/search/" method="get")
            .form-group.header__search
              input(value="" type="text" name="q" autocomplete="off" placeholder="Поиск товаров... ").form-control.js-search
              .header__search-wrapper#header_search_result
              span.icon.lens
          .header__contact.flex
            .modal__container
              a(href="#" data-toggle="modal" data-target="#choiceCityFirst").header__link.header__link_dotted.js-modal
                span.city Санкт-Петербург
                span.icon.geo
              +choiceCityFirst
              +choiceCity
            a(href="#").header__link
              span info@aero-control.ru
              span.icon.mail_dark

        .col-xl-auto.col-lg-6.col-sm-12
          a(href="tel:8 812 649 0519").phone 8 (812) 649-05-19
          a(href="#" data-toggle="modal" data-target="#callMe").header__link.header__link_dotted
            span Заказать звонок
            span.icon.arrow_right

    .header__nav-container
      .container
        .header__nav
          +navbar
            .navbar__subcatalog
              +sub-catalog#sub_1
              +sub-catalog#sub_2
              +sub-catalog#sub_3
              +sub-catalog#sub_4
              +sub-catalog#sub_5
              +sub-catalog#sub_6
              +sub-catalog#sub_7
              +sub-catalog#sub_8
              +sub-catalog#sub_9
              +sub-catalog#sub_10
              +sub-catalog#sub_11
      .header__nav-container_bg


mixin header-map()
  .col-xl-auto.col-lg-6.d-none.d-lg-block
    .header__text_bg
      img(src='images/full.png')
    p.header__text Продажа и монтаж <br>климатического оборудования <br>с доставкой по РФ
